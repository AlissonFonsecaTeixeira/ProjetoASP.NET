@model IEnumerable<Data.Categoria>

<p>
    <a href="~/Categoria/create" class="btn btn-success">Cadastro</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cat_nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cat_descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {

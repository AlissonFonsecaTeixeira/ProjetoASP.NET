@model IEnumerable<Data.Categoria>

<p>
    <a href="~/Categoria/create" class="btn btn-success">Cadastro</a>
</p>
<table class="table">
    <tr>
        <th>
            Nome
        </th>
        <th>
            Descrição
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cat_nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cat_descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Cat_id }) |
            @Html.ActionLink("Visualizar", "Details", new { id=item.Cat_id }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.Cat_id })
        </td>
    </tr>
}

</table>
